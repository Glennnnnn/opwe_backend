<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ljl.opweAuthService.dao.UserAuthMapper">
    <resultMap id="result" type="com.ljl.opweAuthService.entity.pos.UserPo">
        <result property="userId" column="user_id" />
        <result property="userName" column="user_name" />
        <result property="userPassword" column="user_password"/>
        <result property="userRoleName" column="user_role_name" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by" />
        <result property="updateBy" column="update_by" />
        <result property="userStatus" column="user_status" />
    </resultMap>
    
    <select id="checkUserByName" resultMap="result">
        SELECT * From opwe_auth_user where user_name = #{userName}
    </select>

    <select id="queryBasicUserInfoByName" resultMap="result">
        SELECT user_id, user_name FROM user where user_name = #{userName}
    </select>

    <select id="queryBasicUserInfoById" resultMap="result">
        SELECT user_id, user_name FROM user where user_id = #{userId}
    </select>

    <select id="queryUserRoleByUsername" resultType="java.lang.String">
        SELECT
            oar.role_name
        FROM
            opwe_auth_user oau
        LEFT JOIN
            opwe_auth_user_role oaur
        ON
            oau.user_id = oaur.user_id
        LEFT JOIN
            opwe_auth_role oar
        ON
            oaur.role_id = oar.role_id
    </select>

</mapper>
