<configuration>

    <!-- Enable debug mode for logback -->
    <!-- Uncomment the line below if you want to enable debugging -->
    <!-- <debug>true</debug> -->

    <!-- Define the console appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level [%logger{35}:%line] %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Define a rolling file appender for INFO level logs -->
    <appender name="infoRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/info.log</file>
        <encoder>
            <pattern>%d [%thread] %-5level [%logger{35}:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/info.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Define a rolling file appender for ERROR level logs -->
    <appender name="errorDailyFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/error.log</file>
        <encoder>
            <pattern>%d [%thread] %-5level [%logger{35}:%line] %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/error.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- Set the root logger -->
    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="infoRollingFile"/>
        <appender-ref ref="errorDailyFile"/>
    </root>

</configuration>
